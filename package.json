{
  "name": "attention-trainer-extension",
  "version": "1.0.0",
  "description": "Chrome extension for behavioral interventions to reduce excessive scrolling",
  "private": true,
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:e2e": "jest tests/e2e",
    "test:background": "node scripts/test-background.js",
    "test:background:unit": "jest tests/unit/background-script.test.js tests/unit/popup.test.js --verbose",
    "test:background:integration": "jest tests/integration/background-integration.test.js --verbose",
    "test:performance": "node tests/performance/performance.test.js",
    "build": "node build.js",
    "build:prod": "node scripts/build-production.js",
    "build:webpack": "webpack --mode=production",
    "lint": "eslint src/ tests/",
    "lint:fix": "eslint src/ tests/ --fix",
    "dev": "node build.js --watch",
    "dev:webpack": "webpack --mode=development --watch",
    "clean": "rimraf dist coverage",
    "pretest": "echo 'Skipping linting for now'",
    "validate": "npm run lint && npm run test:ci",
    "security:audit": "npm audit --audit-level=moderate",
    "security:fix": "npm audit fix",
    "package:store": "node scripts/package-store.js",
    "analyze": "npm run build:prod && node scripts/analyze-bundle.js"
  },
  "keywords": [
    "chrome-extension",
    "behavioral-intervention",
    "productivity",
    "attention-training",
    "scroll-monitoring"
  ],
  "author": "Attention Trainer Team",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.18.6",
    "@babel/plugin-proposal-optional-chaining": "^7.21.0",
    "@babel/preset-env": "^7.23.0",
    "archiver": "^7.0.1",
    "babel-jest": "^29.7.0",
    "copy-webpack-plugin": "^11.0.0",
    "eslint": "^8.50.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-jest": "^27.4.0",
    "eslint-plugin-n": "^17.21.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.0",
    "fake-indexeddb": "^5.0.1",
    "fs-extra": "^11.3.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-html-reporter": "^3.10.2",
    "jest-webextension-mock": "^3.8.9",
    "puppeteer": "^21.11.0",
    "rimraf": "^5.0.5",
    "sinon": "^16.1.0",
    "sinon-chrome": "^3.0.1",
    "terser": "^5.43.1",
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "browserslist": [
    "chrome >= 88"
  ]
}
